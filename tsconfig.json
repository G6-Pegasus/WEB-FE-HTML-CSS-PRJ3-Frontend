{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "react-jsx",  // Use the new JSX transform (for React 17+)
    "moduleResolution": "node",  // Ensure proper module resolution
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "./jest.setup.ts"]
}
